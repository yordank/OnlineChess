@{
    ViewBag.Title = "Chat";
}
<h2>Chat</h2

@if (Request.IsAuthenticated)
{
<div class="container">
     
    <input type="button" id="sendmessage" value="SEEK OPPONENT" />
    
    <input type="hidden" id="displayname" />

    <ul id="discussion">
         

    </ul>
</div>
}

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;

          
            // Create a function that the hub can call back to display messages.
            chat.client.ResponceAllOpponents = function (names) {
                // names = names.split(',');
                // var games = $.parseJSON(names);
                // Add the message to the page.
                $('#discussion').empty();

                for (let i = 0; i < names.length; i++) {

                     
                    if (names[i].toString() != $('#displayname').val()) {

                        let newLiItem = '<li id="link' + i + '"><a href="#" >Play against ' + names[i].toString() + '</a></li>';
                        $('#discussion').append(newLiItem);

                        $('#link'+i).click(function () {
                            chat.server.startgame(names[i].toString(), $('#displayname').val());
                        });

                    }
                    else
                    {
                        let newLiItem = '<li>' +'@Html.ActionLink("Play against username", null,null,null,new { onclick = "alert('Cannot play against yourself');", @Href = "#" })'.replace("username",names[i].toString()) +'</li>';
                        $('#discussion').append(newLiItem);
                    }

                   
                }

            };

            chat.client.beginGame=function(orientation){
                window.location.href="./Chat?orientation="+orientation;
            }


            // Get the user name and store it to prepend to messages.
            $('#displayname').val('@HttpContext.Current.User.Identity.Name.ToString()');
            // Set initial focus to message input box.

            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    chat.server.seek($('#displayname').val());
                    // Clear text box and reset focus for next comment.

                });

               
                

                chat.server.seekall();

               
            });


           


        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }

        


    </script>
}